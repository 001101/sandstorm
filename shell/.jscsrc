{
  "preset": "airbnb",
  "esnext": true,
  "verbose": true,
  "fileExtensions": [".js"],
  "validateQuoteMarks": {"mark": "\"", "escape": true},
  "disallowVar": true,
  "maximumLineLength": 10000,
  "requirePaddingNewLinesBeforeLineComments": false,
  "requireShorthandArrowFunctions": false,
  "excludeFiles": ['.meteor', '**/node_modules', 'public/*']
}
